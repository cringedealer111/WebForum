@model PostIndexModel

<h1>@Model.Title</h1>

<div>
    Автор: @Model.AuthorName (@Model.AuthorRating)
    Опубликован: @Model.Created
</div>

<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div>
            <div>
                Автор ответа: @reply.AuthorName (@reply.AuthorRating)
                Опубликован: @reply.Created
            </div>

            <div>
                @reply.ReplyContent
            </div>
        </div>
    }
}