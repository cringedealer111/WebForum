@model WebForum.Models.ForumIndexModel;

<h1>Форумы</h1>
<table class="table table-hover" id="forumIndexTable">
    <tbody>
        @foreach (var forum in Model.ForumList)
        {
            <tr>
                <td>
                    <img src="@Url.Content(forum.ImageUrl)" width="100" height="100"/>
                </td>
                <td>
                    <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                        @forum.Title
                    </a>
                    
                </td>
                <td>
                    @forum.Description
                </td>
            </tr>
        }
    </tbody>
</table>