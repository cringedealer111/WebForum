@model ForumTopicModel;
<h1>Добро пожаловать в @Model.Forum.Title форум!</h1>

@if (Model.Posts.Any()){
    <table class="table table-bordered table-hover">
        <tbody>
        @foreach (var post in Model.Posts){
            <tr>
                <td>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                        @post.Title
                    </a>
                    
                </td>
                <td>
                    @post.AuthorName
                </td>
                <td>
                    @post.DatePosted
                </td>
                <td>
                    @post.RepliesCount
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else{
    <div class="noPosts">
        <h3>
            Похоже в @Model.Forum.Title постов нет.<br/>
            Почему бы не 
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>создать</span>
            </a> 
            один?
        </h3>
    </div>
}